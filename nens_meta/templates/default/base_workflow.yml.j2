{{ header }}

# Note: the setup is mostly copied from https://github.com/plone/meta/tree/main/config/default
name: {{ workflow_name }}
on:
  push:
    branches:
      - master
      - main
  pull_request:
    branches:
      - master
      - main
  workflow_dispatch:

jobs:
  # You can customise the list of environments in .nens.toml, [{{ section_name }}] > environments.
{% for environment in environments %}
  {{ environment }}:
    name: {{ environment }}
    runs-on: "ubuntu-latest"
    strategy:
      matrix:
        python-version: {{ python_versions_string }}
        # You can customise the python vresions in .nens.toml, [{{ section_name }}] > python_versions.
    steps:
{% raw %}
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ matrix.python-version }}
      - name: Cache packages
        uses: actions/cache@v4
        with:
          path: ~/.cache/pip
          key: ${{ runner.os }}-pip-${{ matrix.python-version }}-${{ hashFiles('tox.ini') }}
          restore-keys: |
            ${{ runner.os }}-pip-${{ matrix.python-version }}-
            ${{ runner.os }}-pip-
      - name: Install dependencies
        run: python -m pip install tox
{% endraw %}
      - name: Run {{ environment }}
        run: |
            touch for_step_summary.md
            tox -e {{ environment }}
            cat for_step_summary.md >> $GITHUB_STEP_SUMMARY

{% endfor %}

{% if extra_lines %}
{{ extra_lines }}
{% else %}
