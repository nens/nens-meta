{{ header }}
name: {{ workflow_name }}
on:
  push:
    branches:
      - master
      - main
    tags:
      - "*"
  pull_request:
    branches:
      - master
      - main

  workflow_dispatch:

jobs:
  {# You can customise the list of environments in .nens.toml, [meta_workflow] > environments. #}
  tox:
    name: tox
    runs-on: "ubuntu-latest"
    strategy:
      matrix:
        {# You can customise the python versions in .nens.toml: #}
        {# [workflow_meta] > main_python_version and/or python_versions. #}
        include:
{%      for pair in python_tox_pairs %}
          - python-version: "{{ pair.python }}"
            tox-env: "{{ pair.tox }}"
{%      endfor %}
    steps:
{% raw %}
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ matrix.python-version }}
      - name: Cache packages
        uses: actions/cache@v4
        with:
          path: ~/.cache/pip
          key: ${{ runner.os }}-pip-${{ matrix.python-version }}-${{ hashFiles('tox.ini') }}
          restore-keys: |
            ${{ runner.os }}-pip-${{ matrix.python-version }}-
            ${{ runner.os }}-pip-
      - name: Install dependencies
        run: python -m pip install tox
      - name: Actually run ${{ matrix.tox-env }}
        run: |
            touch for_step_summary.md
            tox -e ${{ matrix.tox-env }}
            cat for_step_summary.md >> $GITHUB_STEP_SUMMARY
{% endraw %}
