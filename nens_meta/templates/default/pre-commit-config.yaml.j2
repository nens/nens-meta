{{ header }}
default_language_version:
  python: python3

repos:
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v4.4.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
      - id: check-toml
      - id: check-added-large-files
{% if is_python_project %}
  - repo: https://github.com/astral-sh/ruff-pre-commit
    # Ruff version.
    rev: v0.1.13
    hooks:
      # Run the linter.
      - id: ruff
        args: ["--fix"]
      # Run the formatter.
      - id: ruff-format
{% endif %}
{% if extra_lines %}
{{ extra_lines }}
{% else %}
# Configure extra_lines if you want more content. Watch the indentation.
# Example:
# [pre-commit-yaml]
# extra_lines = """
#   - repo: https://somewhere
#     rev: v0.1.2
#     hooks:  etc
{% endif %}
